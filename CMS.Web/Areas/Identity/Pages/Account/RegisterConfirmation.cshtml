@page
@model RegisterConfirmationModel
@{
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    ViewData["Title"] = "Xác nhận đăng ký tài khoản";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Xác nhận đăng ký: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Nhấn vào đây để xác nhận đăng ký tài khoản</a>
        </p>
    }
    else
    {
        <p>
            Vui lòng kiểm tra email để xác nhận đăng ký tài khoản.
        </p>
    }
}
